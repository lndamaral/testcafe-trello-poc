{
    "browsers": "chrome",
    "src": "e2e/tests/",
    "screenshots": {
        "path": "reports/screenshots",
        "takeOnFails": true,
        "fullPage": true,
        "pathPattern": "${DATE}_${TIME}/test-${TEST_INDEX}/${USERAGENT}/${FILE_INDEX}.png"
    },
    "reporter": [
        {
            "name": "spec"
        },
        {
            "name": "json",
            "output": "reports/report.json"
        }
    ]
}